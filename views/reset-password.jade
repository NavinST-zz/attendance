extends layout
block content
  if (req.user)
    .content
      h2 Recover
      p Please log out before recovering a passwerd!
  else

    .content
      .page-header
        h2 Reset Password

    form(action=req.url, method='POST')
      input(type='hidden', name='_csrf', value=req.session._csrf)
      input(type='hidden', name='s', value=secret)
      .clearfix
        label(for='password') New Password:
        .input
          input(type='password', name='password')#password

        .actions
          input(type='submit', value='Reset Password').btn.primary
